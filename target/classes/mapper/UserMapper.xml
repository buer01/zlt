<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zlt.Database_leakage_RSA.dao.UserDao">

    <select id="findAll" resultType="com.zlt.Database_leakage_RSA.entity.User">
        select * from admin
    </select>
<!--#是安全查询方法，$则不安全-->
    <select id="findById" resultType="com.zlt.Database_leakage_RSA.entity.User">
        select * from admin where id =#{userId}

    </select>

    <select id="addUser" resultType="String">
        INSERT INTO admin (id,name,password,address,icon) VALUES (#{userId},#{name},#{password},#{address},#{ico});
    </select>

    <select id="editUser" resultType="String">
        UPDATE admin SET name = #{name} , password = #{password},address = #{address},icon = #{ico} WHERE id = #{userId}
    </select>

    <select id="delUser" resultType="String">
        DELETE FROM admin WHERE id = #{userId};
    </select>

    <select id="findById2" resultType="com.zlt.Database_leakage_RSA.entity.User">
        select * from admin where id =#{userId}

    </select>

<!-- 还有动态sql的类型，搭建靶机可以使用-->

</mapper>